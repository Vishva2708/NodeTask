<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="p-4">
    <h3>Blog Page</h3>
    <form action="/blogpage/add" method="post">
      <input
        type="text"
        name="username"
        class="form-control"
        placeholder="Enter username"
      />
      <input
        type="text"
        name="password"
        class="form-control"
        placeholder="Enter password"
      />
      <input
        type="text"
        name="title"
        class="form-control"
        placeholder="Enter Title"
      />
      <textarea
        name="content"
        class="form-control"
        placeholder="Enter Content"
      ></textarea>
      <select name="category" class="form-control">
        <option value="Tech">Tech</option>
        <option value="Sports">Sports</option>
        <option value="Education">Education</option>
      </select>

      <button type="submit" class="mt-3 text-center p-1 fs-4">Submit</button>
    </form>

    <table class="table table-bordered mt-5">
      <tr>
        <th>username:</th>
        <th>password:</th>
        <th>Title:</th>
        <th>Content:</th>
        <th>Category:</th>
        <th>Action</th>
      </tr>

      <% data.map((el,i)=> { %>
      <tr>
        <td><%= el.username %></td>
        <td><%= el.password %></td>
        <td><%= el.title %></td>
        <td><%= el.content %></td>
        <td><%= el.category %></td>
        <td><a href="/blogpage/delete?id=<%= el._id %>">Delete</a></td>
        <td><a href="/blogpage/edit?id=<%= el._id %>">Edit</a></td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
